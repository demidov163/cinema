<?xml version="1.0" encoding="utf-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="com.demidov.cinema.model.persistence.unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
        </properties>
        <class>
            com.demidov.cinema.model.entities.Film
        </class>
        <class>
            com.demidov.cinema.model.entities.Hall
        </class>
        <class>
            com.demidov.cinema.model.entities.Session
        </class>
        <class>
            com.demidov.cinema.model.entities.Ticket
        </class>
        <class>
            com.demidov.cinema.model.entities.User
        </class>
    </persistence-unit>
</persistence>